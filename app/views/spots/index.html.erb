<h2> Le <%= Restaurant.find(1).name%> - Tables list : </h2>
<ol>
  <% @spots.each do |spot| %>
    <li> Table #<%= spot.name %> - <%= spot.capacity %> pax</li>
    <%= link_to 'Remove', restaurant_spot_path(Restaurant.find(1), spot),
    method: :delete,
    data: { confirm: "Are you sure sure sure ?" }
    %>
    </li>
  <% end %>
</ol>

<%= link_to 'Add a table', new_restaurant_spot_path(Restaurant.find(1))%>
