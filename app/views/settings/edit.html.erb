<div class="margin-top">

  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Edition restaurant</h3>
          </div>
          <div class="panel-body">
            <%= simple_form_for @restaurant, url: restaurant_settings_path do |f| %>
              <%= f.input :name %>
              <%= f.input :city %>
              <%= f.input :street %>
              <%= f.input :zip_code %>
              <%= f.input :capacity %>
              <%= f.submit %>
            <% end %>
          </div>
        </div>


      </div>
    </div>
  </div>

</div>


