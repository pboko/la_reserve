<h1>New Booking</h1>

<!--<%= render 'bookings/form' %> -->

<button data-toggle="modal" data-target="#myModal2" class="btn btn-primary">Create new booking</button>


<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body text-center">
          <%= simple_form_for [@restaurant, @booking] do |f| %>
            <%= f.error_notification %>

            <%= f.label :date %>
            <%= f.text_field :date, class: "form-control", :data => {:provide => :datepicker, 'date-format' => "dd/mm/yyyy"} %>
            <%= f.label :start_time %>
            <%= f.time_field :start_time, class: "form-control" %>
            <%= f.label :end_time %>
            <%= f.time_field :end_time, class: "form-control" %>
            <%= f.input :pax, class: "form-control", placeholder: 'number of people' %>

            <%= f.button :submit, class: "btn btn-danger"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
