<h1>Bookings#show</h1>


<ul class="nav nav-pills">
  <li role="presentation" class="active"><a href="#">Midi</a></li>
  <li role="presentation"><a href="#">Soir</a></li>
</ul>

<table class="table">

  <% @bookings.each do |booking| %>

    <tbody>
      <thead>
        <tr>
          <th>Heure</th>
          <th>Statut</th>
          <th>Couverts</th>
          <th>Client</th>
          <th>Table</th>
          <th>Notes</th>
          <th>Action 1></th>
          <th>Action 2></th>
        </tr>
      </thead>
      <tr>
        <td>
          <%= booking.start_time %>
        </td>
        <td>
          <%= booking.status %>
        </td>
        <td>
          <%= booking.pax %>
        </td>
        <td>
          <%= booking.customer.last_name %>
        </td>
        <td>
          <%= booking.spots.name %>
        </td>
        <td>
          <%= booking.notes %>
        </td>
        <td>
          <%= link_to "Edit", edit_restaurant_booking_path(@restaurant, booking) %>
        </td>
        <td><%= link_to "Delete", restaurant_booking_path(@restaurant, booking),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    </tbody>
  <% end %>

</table>
