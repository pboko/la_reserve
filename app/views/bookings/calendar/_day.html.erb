
<div class="row">

  <%= link_to(restaurant_bookings_path(@restaurant, date: date), remote: true) do %>

    <% if total_cuttlery_for(:midi, date, @bookings) >= @restaurant.capacity %>
       <div class='red col-xs-12 dejdinend'>
    <% elsif total_cuttlery_for(:midi, date, @bookings) >= (@restaurant.capacity - 10) %>
       <div class="orange col-xs-12 dejdinend">
    <% else %>
       <div class="col-xs-12 dejdinend">
    <% end %>

        <p class= "dejdin">midi</p>
        <span class= "dejdin col-xs-6 text-right" id="couverts"><%= total_cuttlery_for(:midi, date, @bookings) %>/<%= @restaurant.capacity %></span>
        <div class= "dejdin font-bold  col-xs-6 text-left">(14)</div>
      </div>
  <% end %>


  <%= link_to(restaurant_bookings_path(@restaurant, date: date), remote: true) do %>
    <% if total_cuttlery_for(:soir, date, @bookings) >= @restaurant.capacity %>
      <div class='red col-xs-12 dejdinend'>
    <% elsif total_cuttlery_for(:soir, date, @bookings) >= (@restaurant.capacity - 10) %>
      <div class="orange col-xs-12 dejdinend">
    <% else %>
      <div class="col-xs-12 dejdinend">
    <% end %>
      <p class= "dejdin">soir</p>
      <span class= "dejdin col-xs-6 text-right" id="couverts"><%= total_cuttlery_for(:soir, date, @bookings) %>/<%= @restaurant.capacity %></span>
      <span class= "dejdin font-bold col-xs-6 text-left">(14)</span>
      </div>
  <% end %>
</div>
