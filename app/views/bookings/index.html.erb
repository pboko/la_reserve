<h1>Bookings#index</h1>
<ul class="nav nav-pills">
  <li role="presentation" class="active"><a href="#resa-midi" data-toggle="tab">Midi</a></li>
  <li role="presentation"><a href="#resa-soir" data-toggle="tab">Soir</a></li>
</ul>

<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="resa-midi">
    <table class="table">
      <thead>
        <tr>
          <th>Service</th>
          <th>Heure</th>
          <th>Statut</th>
          <th>Couverts</th>
          <th>Client</th>
          <th>Table</th>
          <th>Notes</th>
          <th>Action 1</th>
          <th>Action 2</th>
        </tr>
      </thead>
      <tbody>
        <% @bookings.for_period(:midi).each do |booking| %>
          <tr>
            <td>
              <%= booking.period %>
            </td>
            <td>
              <%= booking.start_time.hour %>h<%= booking.start_time.min %>
            </td>
            <td>
              <%= booking.status %>
            </td>
            <td>
              <%= booking.pax %>
            </td>
            <td>
              Toto
            </td>
            <td>
              <%= booking.spots.name %>
            </td>
            <td>
              <%= booking.notes %>
            </td>
            <td>
              <%= link_to "Edit", edit_restaurant_booking_path(@restaurant, booking) %>
            </td>
            <td><%= link_to "Delete", restaurant_booking_path(@restaurant, booking),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div role="tabpanel" class="tab-pane" id="resa-soir">
