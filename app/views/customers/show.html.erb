<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-4">
      <h1><%= @customer.full_name %>
        <%= link_to edit_customer_path(@customer) do %>
          <i class="fa fa-pencil-square"></i>
        <% end %>
      </h1>
      <hr class="dividor">
      <div class="row">
        <div class="col-md-9">
          <% if @customer.email? %>
            <p><%= @customer.email %></p>
          <% end %>
          <% if @customer.phone_number? %>
            <p><%= @customer.phone_number%></p>
          <% end %>
        </div>
        <div class="col-md-3">
          <a href="#" class="btn btn-primary">Add a booking</a>
          <%#= link_to "Add a booking", class: "btn btn-primary" %>
        </div>
      </div>
      <hr class="dividor">
      <div class="row">
        <div class="col-md-6">
          <h3>Status</h3>
        </div>
        <div class="col-md-6">
          <h3>Comments</h3>
        </div>
      </div>


    </div>
  </div>
</div>


