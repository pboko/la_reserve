<div class="padded-left">
  <div class="row">
    <div class="col-md-9">
      <h2><%= customer.full_name %></h2>
    </div>
    <div class="col-md-3 text-right">
      <h2>
        <%= link_to edit_customer_path(customer) do %>
          <i class="fa fa-pencil-square"></i>
        <% end %>
      </h2>
    </div>
  </div>

  <hr class="dividor">
  <div class="row">
    <div class="col-md-9">
      <% if customer.email? %>
        <p><%= customer.email %></p>
      <% end %>
      <% if customer.phone_number? %>
        <p><%= customer.phone_number%></p>
      <% end %>
    </div>
    <div class="col-md-3 text-right">
      <a href="#" class="btn btn-primary">Add a booking</a>
      <%#= link_to "Add a booking", class: "btn btn-primary" %>
    </div>
  </div>
  <hr class="dividor">
  <div class="row">
    <div class="col-md-6">
      <h3>Status</h3>
    </div>
    <div class="col-md-6">
      <h3>Comments</h3>
    </div>
  </div>
</div>


