        <div class="col-sm-6 col-md-6">
          <div class = "feature_icone">
            <%= image_tag "time.svg", class: " img-responsive" %>
          </div>
        </div>
        <div class="col-sm-6 col-md-6">
          <div class = "feature_description">
            <h3>Prenez des réservations par téléphone plus rapidement</h3>
