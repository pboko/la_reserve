<% if comments.present? %>
  <!-- <p>Pas de notifications</p> -->
  <% comments.each do |comment| %>
    <div class="row wordwrap">
      - <%= comment.content.capitalize %>
      <%= link_to restaurant_comment_path(@restaurant, comment),
        method: :delete,
        data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash-o"></i>
        <% end %>
    </div>
    </br>
  <% end %>
<% end %>
