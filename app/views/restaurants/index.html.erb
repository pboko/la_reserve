<div class="margin-top">

<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

<!--       <h2> My restaurants </h2> -->

        <div class="row">

          <% @restaurants.each do |restaurant| %>
            <div class="col-md-3">
              <div class="square text-center">
                <%= link_to restaurant_path(restaurant) do %>
                 <div class="padding-square">
                  <%= restaurant.name.capitalize %>
                 </div>
                  <%#= link_to 'Edit', edit_restaurant_path(restaurant) %>
                  <%#= link_to 'Delete', restaurant_path(restaurant),
                  method: :delete,
                  data: { confirm: "Are you sure sure sure ?" }
                  %>
                <% end %>
              </div>
            </div>
          <% end %>

          <div class="col-md-3">
            <div class="square text-center">
              <%= link_to new_restaurant_path do %>
              <div class="padding-square">
                <i class="fa fa-plus"></i>
              </div>
              <% end %>
            </div>
          </div>
        </div>

    </div>
  </div>
</div>





</div>
