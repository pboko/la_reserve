<%= simple_form_for @restaurant do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :capacity,  input_html: { min: '0'} %>
  <%= f.input :street %>
  <%= f.input :zip_code %>
  <%= f.input :city %>
  <%= f.label :picture %>
  <%= f.file_field :picture %>
<br>
  <%= f.button :submit, class: "btn btn-primary btn-full-width" %>

<% end %>
